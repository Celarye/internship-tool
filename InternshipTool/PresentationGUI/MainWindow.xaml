<Window x:Class="PresentationGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationGUI"
        mc:Ignorable="d"
        Title="Internship Tool" Height="250" Width="415">
    <Grid>
        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="56,13,0,0"/>
        <TextBox x:Name="LoginEmailTextBox" HorizontalAlignment="Left" Margin="15,39,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="45,59,0,0"/>
        <PasswordBox x:Name="LoginPasswordBox" HorizontalAlignment="Left" Margin="15,85,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="58,128,0,0" VerticalAlignment="Top" Click="Login"/>
        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="181,13,0,0"/>
        <TextBox x:Name="RegisterEmailTextBox" HorizontalAlignment="Left" Margin="140,39,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="170,59,0,0"/>
    <PasswordBox x:Name="RegisterPasswordBox" HorizontalAlignment="Left" Margin="140,85,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Company Name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="152,103,0,0"/>
    <TextBox x:Name="RegisterCompanyNameTextBox"  HorizontalAlignment="Left" Margin="140,129,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="First Name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="291,13,0,0"/>
        <TextBox x:Name="RegisterSecondNameTextBox" HorizontalAlignment="Left" Margin="265,39,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Second Name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="283,59,0,0"/>
        <TextBox x:Name="RegisterFirstNameTextBox" HorizontalAlignment="Left" Margin="265,85,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Margin="302,128,0,0" VerticalAlignment="Top" Click="Register"/>
        <Label x:Name="ErrorLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.35" Margin="0,180,0,0"/>
        <Separator HorizontalAlignment="Left" Margin="67.5,81,0,0" VerticalAlignment="Top" Height="5" Width="140" Background="DimGray" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
    </Grid>
</Window>
