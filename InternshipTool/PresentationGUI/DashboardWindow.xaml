<Window x:Class="PresentationGUI.DashBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationGUI"
        mc:Ignorable="d"
        Title="DashBoard" Height="380" Width="350">
    <Grid>
    <TextBlock Text="Dashboard" 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top" 
        FontSize="24" Margin="10,10,0,0"/>
    <Button Content="Internships" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Click="Internships"/>
    <Button x:Name="AddCVButton" Content="Add CV" HorizontalAlignment="Left" Margin="82,42,0,0" VerticalAlignment="Top" Click="AddCV" Visibility="Hidden"/>
    <Label x:Name="TitleLabel" Content="Title" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Margin="10,95,0,0" Text="" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    <Label x:Name="DescriptionLabel" Content="Description" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="10,139,0,0" Text="" VerticalAlignment="Top" Width="245" Visibility="Hidden"/>
    <Button x:Name="AddInternshipButton"  Content="Add Internship" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top" Click="AddInternship" Visibility="Hidden"/>
    <Label x:Name="EmailLabel" Content="Email" HorizontalAlignment="Left" Margin="10,187,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="10,213,0,0" Text="" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="10,257,0,0" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    <Label x:Name="FirstNameLabel" Content="First Name" HorizontalAlignment="Left" Margin="135,187,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Margin="135,213,0,0" Text="" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    <Label x:Name="SecondNameLabel" Content="Second Name" HorizontalAlignment="Left" Margin="135,231,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    <TextBox x:Name="SecondNameTextBox" HorizontalAlignment="Left" Margin="135,257,0,0" Text="" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    <Button x:Name="AddCompanyEmployeeButton"  Content="Add Company Employee" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Click="AddCompanyEmployee" Visibility="Hidden"/>
    <Label x:Name="FeedbackLabel" Content="" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top"/>
  </Grid>
</Window>
