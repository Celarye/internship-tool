<Window x:Class="PresentationGUI.InternshipEvaluationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationGUI"
        mc:Ignorable="d"
        Title="Evaluation" Height="460" Width="350">
  <Grid>
    <TextBlock Text="Evaluation" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   FontSize="24" Margin="10,10,0,0"/>
        <Label Content="Mentor Evaluation 1" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MentorEvaluation1TextBox" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="117"/>
        <Label Content="Mentor Evaluation 2" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MentorEvaluation2TextBox" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="117"/>
        <Label Content="Teacher Evaluation" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TeacherEvaluationTextBox" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Width="117"/>
        <Label Content="Overall Score" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OverallScoreTextBox" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="117" IsReadOnly="true"/>
        <Label Content="Notes" HorizontalAlignment="Left" Margin="10,243,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NotesTextBox" HorizontalAlignment="Left" Margin="10,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="80"/>
        <Button x:Name="UpdateInernshipEvaluation" Content="Update" HorizontalAlignment="Left" Margin="10,354,0,0" VerticalAlignment="Top" Click="UpdateInternshipEvaluation"/>
    <Label x:Name="FeedbackLabel" Content="" HorizontalAlignment="Center" Margin="10,379,0,0" VerticalAlignment="Top"/>
  </Grid>
</Window>
